{
  "name": "ubiotest",
  "version": "1.0.0",
  "type": "module",
  "main": "out/bin/serve.js",
  "scripts": {
    "start": "node out/bin/serve",
    "dev": "npm run clean && tsc -w",
    "lint": "eslint --ext=.js,.ts --cache .",
    "clean": "rm -rf out",
    "compile": "npm run clean && tsc",
    "test": "NODE_ENV=test mocha",
    "docs": "npm run docs:openapi && npm run docs:api",
    "docs:openapi": "generate-openapi > openapi.json",
    "docs:api": "generate-docs > API.md",
    "preversion": "npm run lint && npm run compile",
    "version": "npm run docs && git add openapi.json API.md",
    "postversion": "git push origin $(git rev-parse --abbrev-ref HEAD) --tags",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/chai": "^5.0.1",
    "@types/koa": "^2.15.0",
    "@types/mongodb": "^4.0.6",
    "@ubio/framework": "^15.11.1",
    "chai": "^5.1.2",
    "dotenv": "^16.4.7",
    "koa": "^2.15.3",
    "mesh-ioc": "^3.4.0",
    "mongodb": "^6.12.0"
  },
  "devDependencies": {
    "@nodescript/eslint-config": "^2.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "typescript": "^5.7.2"
  }
}
